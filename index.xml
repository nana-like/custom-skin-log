<?xml version="1.0" encoding="utf-8"?>
<skin>
	<information>
		<name>Log Skin (로그 스킨)</name>
		<version>1.0</version>
		<description>
			<![CDATA[ 기록을 남기는 모든 이들을 위한 스킨. 심플하고 정돈된 느낌을 좋아하는 분들께 추천드려요! ]]>
		</description>
		<license>
			<![CDATA[ MIT License ]]>
		</license>
	</information>
	<author>
		<name>나나(nykim)</name>
		<homepage>https://nykim.work</homepage>
		<email>nykim@nykim.net</email>
	</author>
	<default>
		<recentEntries>4</recentEntries>
		<recentComments>5</recentComments>
		<recentTrackbacks>5</recentTrackbacks>
		<itemsOnGuestbook>5</itemsOnGuestbook>
		<tagsInCloud>20</tagsInCloud>
		<sortInCloud>3</sortInCloud>
		<expandComment>1</expandComment>
		<lengthOfRecentNotice>40</lengthOfRecentNotice>
		<lengthOfRecentEntry>30</lengthOfRecentEntry>
		<lengthOfRecentComment>40</lengthOfRecentComment>
		<lengthOfRecentTrackback>40</lengthOfRecentTrackback>
		<lengthOfLink>40</lengthOfLink>
		<commentMessage>
			<none>0</none>
			<single>1</single>
		</commentMessage>
		<trackbackMessage>
			<none>0</none>
			<single>1</single>
		</trackbackMessage>
		<contentWidth>1200</contentWidth>
		<toolbar>white</toolbar>
	</default>
	<cover>
		<item>
			<name>horizontal</name>
			<label><![CDATA[ 리스트 ]]></label>
			<description><![CDATA[ 사진, 제목, 날짜, 내용 미리보기로 구성된 리스트입니다. ]]></description>
		</item>
		<item>
			<name>gallery</name>
			<label><![CDATA[ 갤러리 리스트 ]]></label>
			<description><![CDATA[ 사진을 크게 보여주며, 내용 없이 제목과 날짜만 표시하는 형태입니다. ]]></description>
		</item>
	</cover>
	<variables>
		<variable>
			<name>logoImage</name>
			<label>로고</label>
			<description></description>
			<type>IMAGE</type>
			<option></option>
			<default></default>
		</variable>
		<variable>
			<name>penelopeColorSet</name>
			<label>메인 컬러</label>
			<description></description>
			<type>SELECT</type>
			<option><![CDATA[
				[
					{"name":"thema_blue", "label":"블루(기본)", "value":"thema_blue"},
					{"name":"thema_pink", "label":"핑크", "value":"thema_pink"},
					{"name":"thema_orange", "label":"오렌지", "value":"thema_orange"},
				]
			]]></option>
			<default>thema_blue</default>
		</variable>
		<!-- <variable>
			<name>penelopeListType</name>
			<label>글 목록 형태</label>
			<description></description>
			<type>SELECT</type>
			<option><![CDATA[
				[
					{"name":"horizontal", "label":"기본형", "value":"horizontal"},
					{"name":"gallery", "label":"갤러리", "value":"gallery"}
				]
			]]></option>
			<default>horizontal</default>
		</variable> -->
		<variable>
			<name>footerCopyright</name>
			<label>하단 카피라이트</label>
			<description></description>
			<type>STRING</type>
			<option></option>
			<default></default>
		</variable>
		<variable>
			<name>snsFacebook</name>
			<label>SNS 링크</label>
			<description></description>
			<type>STRING</type>
			<option></option>
			<default></default>
		</variable>
</skin>
